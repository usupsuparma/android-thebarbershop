<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color"
    tools:context="id.usup.thebarbershop.FirstActivity">

    <Button
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:background="@drawable/background_round"
        android:textColor="#E0F2F1"
        android:id="@+id/button_login_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.449" />

    <Button
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:background="@drawable/background_round"
        android:textColor="#E0F2F1"
        android:id="@+id/button_registration_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="registration"
        app:layout_constraintEnd_toEndOf="@+id/button_login_first"
        app:layout_constraintStart_toStartOf="@+id/button_login_first"
        app:layout_constraintTop_toBottomOf="@+id/button_login_first"
        tools:ignore="MissingConstraints" />
</android.support.constraint.ConstraintLayout>
