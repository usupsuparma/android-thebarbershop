<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="@drawable/background_color"
    tools:context="id.usup.thebarbershop.RegistrationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:textColorHint="@android:color/white"
            android:layout_width="match_parent"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:textColor="@android:color/white"
                android:id="@+id/editText_name_registration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Name" />
        </android.support.design.widget.TextInputLayout>
        <RadioGroup
            android:id="@+id/radio_group_registration"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:textColor="@android:color/white"
                android:checked="true"
                android:id="@+id/radio_button_male"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Male"/>
            <RadioButton
                android:textColor="@android:color/white"
                android:id="@+id/radio_button_famale"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Female"/>
        </RadioGroup>
        <android.support.design.widget.TextInputLayout
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:textColor="@android:color/white"
                android:inputType="number"
                android:id="@+id/editText_noHandphome_registration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="No Handphone" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:textColor="@android:color/white"
                android:id="@+id/editText_email_registration"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email" />
        </android.support.design.widget.TextInputLayout>
        <Switch
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/switchId"/>
        <android.support.design.widget.TextInputLayout
            android:textColorHint="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:textColor="@android:color/white"
                android:inputType="textPassword"
                android:id="@+id/editText_password_registration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password" />
        </android.support.design.widget.TextInputLayout>
        <CheckBox
            android:textColor="@android:color/white"
            android:id="@+id/checkbox_aggree_registration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aggree"/>
        <Button
            android:background="@drawable/background_round"
            android:textColor="@android:color/white"
            android:id="@+id/button_registration"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registration"/>
        <TextView
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="or, registrasion with"/>
        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:background="@drawable/background_round"
                android:textColor="@android:color/white"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:text="Facebook"/>
            <Button
                android:background="@drawable/background_round"
                android:textColor="@android:color/white"
                android:padding="8dp"
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Google"/>
        </LinearLayout>
    </LinearLayout>


</ScrollView>
